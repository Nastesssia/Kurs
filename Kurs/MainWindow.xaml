<Window x:Class="Kurs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kurs"
        mc:Ignorable="d"
        Title="Шашки" Height="500" Width="600" Background="LemonChiffon">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="450"/>
            <ColumnDefinition Width="130"/>
        </Grid.ColumnDefinitions>
        <Border BorderThickness="2" Margin="10" VerticalAlignment="Center" Grid.Column="0" Background="Black">
            <Canvas x:Name="CheckPlace" Background="Bisque" Height="400" Margin="10" Width="400" MouseUp="cmClick"/>
        </Border>
        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" Orientation="Vertical">
            <Button x:Name="button2" Content="Запуск" FontSize="20" Margin="10" Width="80" Height="50" Background="DarkOliveGreen" Foreground="PapayaWhip" FontWeight="Medium" Click="cmAutoRun"/>
            <Button x:Name="button" Content="Выход" FontSize="20" Margin="10 20" Width="80" Height="50" Background="SaddleBrown"  FontWeight="Medium" Foreground="PapayaWhip" Click="cmClose"/>
        </StackPanel>


    </Grid>
</Window>